<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">
        {% endblock %}
            
        {% block customcss %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container-fluid">
            
            {% block navbar %}
                <div class="navbar navbar-default navbar-fixed-top">
                    <div class="navbar-header">
                      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                      </button>
                      <a class="navbar-brand" href="/">UP RPTS</a>
                    </div>
                    <div class="navbar-collapse collapse navbar-responsive-collapse">
                      <ul class="nav navbar-nav">
                        <li class="{% if app.request.attributes.get('_route') == '/grant' %}active{% endif %}"><a href="/grant">Grants</a></li>
                        <li class="{% if app.request.attributes.get('_route') == '/help' %}active{% endif %}"><a href="/help">Help</a></li>
                        <li class="dropdown">
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
                          <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li class="divider"></li>
                            <li class="dropdown-header">Dropdown header</li>
                            <li><a href="#">Separated link</a></li>
                            <li><a href="#">One more separated link</a></li>
                          </ul>
                        </li>
                      </ul>
                      <form class="navbar-form navbar-left">
                        <input type="text" class="form-control col-lg-8" placeholder="Search">
                      </form>
                      <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown">{% if app.user %} {{ app.user.firstName }} {% else %}Guest {% endif %}<b class="caret"></b></a>
                          <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                          </ul>
                        </li>
                      </ul>
                    </div>
                  </div>
            {% endblock %}

            <div class="row" style="padding-top:50px;">
                <div class="col-md-12">
                    {% block body %}
                        <h1>Hello, you are processed by the main bundle!</h1>
                    {% endblock %}
                </div>
            </div>
            
            {% block footer %}
            <div class="row">
                
            </div>
            {% endblock %}
            
            {% block javascripts %}
                <script src="{{ asset('js/jquery.js') }}"></script>
                <script src="{{ asset('js/bootstrap.js') }}"></script>
            {% endblock %}
                
            {% block customjs %}
                
            {% endblock %}
        </div>
    </body>
</html>
