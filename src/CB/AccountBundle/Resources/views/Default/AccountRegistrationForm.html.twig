{% extends '::base.html.twig' %}

{% block title %} Register {% endblock %}

{% block body %}

    {{ form_start(form, { 'style': 'horizontal', 'col-size': 'md' }) }}
        <div class="row error-log" style="margin: 20px auto;">
            <div class="col-lg-offset-2">
                {{ form_errors(form, { 'global_errors': true }) }}
            </div>
        </div>
        <div class="well bs-component">
            {{ form_row(form.account.primaryEmail) }}
            {{ form_row(form.account.password) }}
            <legend>Basic Info</legend>
            {{ form_row(form.account.firstName) }}
            {{ form_row(form.account.middleName) }}
            {{ form_row(form.account.lastName) }}
            {{ form_row(form.account.birthdate) }}
            <legend>Contact Information</legend>
            {{ form_row(form.account.contactEmail) }}
            {{ form_row(form.account.contactPhone) }}
            <legend>Education</legend>
            {{ form_row(form.account.education) }}
            <legend>Employee Profile</legend>
            {{ form_row(form.account.employee) }}
            <legend>Other Academic Experience</legend>
            {{ form_row(form.account.academicExperience) }}
        </div>

    {{ form_end(form) }}

 
{% endblock %}

