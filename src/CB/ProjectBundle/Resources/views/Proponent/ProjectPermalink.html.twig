{% extends '::base.html.twig' %}

{% block body %}
    <div class="row" style="padding-top: 20px;">

        <!-- Tab panes -->
        <div class="tab-content col-xs-9">
            <div class="tab-pane fade" id="grant">

                {% if project.grantCycleInstance is not empty %}
                    {% for instance in project.grantCycleInstance %}
                        <a href="{{ path('cb_grant_instance_permalink', {'user':'proponent', 'grant':instance.grantCycleInstanceId, 'project':project.projectId}) }}">
                            {% include 'CBGrantBundle:Template:GrantInstanceList.html.twig' with {'instance':instance} %}
                        </a>
                    {% endfor %}
                {% endif %}

            </div>
            <div class="tab-pane fade in active" id="project">
                {% include 'CBProjectBundle:Template:ProjectInfo.html.twig' with {'project':project} %}
            </div>
        </div>


        <!-- Nav tabs -->
        <ul class="nav nav-pills nav-stacked col-xs-3">
            <li class="active"><a href="#project" data-toggle="tab">Project Info</a></li><hr>
            <li class><a href="#grant" data-toggle="tab">Grants Associated With This Project</a></li>

        </ul>

    </div>


{% endblock %}